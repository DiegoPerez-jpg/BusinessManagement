<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.businessmanagement.SecondaryController"
      spacing="10" alignment="TOP_CENTER" prefWidth="420.0" prefHeight="320.0"
      style="-fx-padding: 16;">
   <children>
      <Label text="Crear nueva empresa" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
      <GridPane hgap="10" vgap="8">
         <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints minWidth="240" />
         </columnConstraints>

         <children>
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="tfNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="CIF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="tfCif" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Dirección:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="tfDireccion" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="tfTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
         </children>
      </GridPane>

      <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 6;">
         <Button fx:id="btnGuardar" text="Guardar" prefWidth="90"/>
         <Button fx:id="btnCancelar" text="Cancelar" prefWidth="90"/>
      </HBox>
   </children>
</VBox>
