<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.businessmanagement.PrimaryController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="160.0" spacing="12.0" style="-fx-background-color: #f0f0f0; -fx-padding: 16; -fx-border-color: #dcdcdc; -fx-border-width: 0 1 0 0;">
            <children>
                <Button fx:id="nuevoButton" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #6dd66d; -fx-font-weight: bold; -fx-text-fill: white;" text="Nuevo" translateY="250.0" />
                <Button fx:id="abrirButton" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #4da6ff; -fx-font-weight: bold; -fx-text-fill: white;" text="Abrir" translateY="325.0" />
            </children>
        </VBox>
    </left>

    <center>
        <AnchorPane style="-fx-background-color: #fafafa;">
            <children>
                <AnchorPane fx:id="nuevoPanel" layoutX="300.0" layoutY="75.0" prefHeight="500.0" prefWidth="500.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10" style="-fx-padding: 16; -fx-background-color: #fafafa;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Crear nueva empresa" />
                                <GridPane hgap="10" vgap="8">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="140" />
                                        <ColumnConstraints minWidth="240" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Código (num):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextField id="codigoTextField" fx:id="codigoTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <TextField id="nombreTextField" fx:id="nombreTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="Web:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField id="webTextField" fx:id="webTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                        <TextField id="direccionTextField" fx:id="direccionTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                        <Label text="Código postal:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                        <TextField id="cpTextField" fx:id="codigoPostalTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                        <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                        <TextField id="ciudadTextField" fx:id="ciudadTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                        <Label text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                        <TextField id="provinciaTextField" fx:id="provinciaTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                        <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                                        <TextField id="paisTextField" fx:id="paisTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                                        <Label text="Etiqueta:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                                        <TextField id="etiquetaTextField" fx:id="etiquetaTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                                        <Label text="NIF:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                                        <TextField id="nifTextField" fx:id="nifTextField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

                                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                                        <TextField id="emailTextField" fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                                        <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
                                        <TextField id="telefonoTextField" fx:id="telefonoTextField" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                                    </children>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>
                                </GridPane>

                                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 6;">
                                    <children>
                                        <Button fx:id="cancelarButton" prefWidth="90" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Cancelar" translateX="-85.0" translateY="40.0" />
                                    </children>
                                </HBox>

                                <Button fx:id="guardarButton" prefWidth="90" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Guardar" translateX="-25.0" translateY="-1.0" />
                        <Label id="errorLabel" fx:id="IdError" text="Error" textFill="RED" translateX="-175.0" translateY="-30.0" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

                <AnchorPane fx:id="cargarPanel" layoutX="108.0" layoutY="44.0" prefHeight="500.0" prefWidth="500.0" visible="false">
                    <children>
                        <Label
                                style="-fx-font-size: 16px; -fx-font-weight: bold;"
                                text="Seleccione una empresa:" />
                        <ListView fx:id="empresasListView" layoutX="8.0" layoutY="45.0" prefHeight="367.0" prefWidth="384.0" />
                        <Button fx:id="cargarButton" layoutX="167.0" layoutY="419.0" prefWidth="90" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Cargar" />
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
